<%= stylesheet_link_tag "food_controller" %>

<div class="conatiner">
<table class="table table-striped">
    <tr>
      <th scope="col">Food</th>
      <th scope="col">Measurement unit</th>
      <th scope="col">Unit price</th>
      <th scope="col">Action</th>
    </tr>

    <% @foods.each do |food| %>
      <tr>
      <td scope="row"><%= food.name%></td>
      <td scope="row"><%= food.measurement_unit%></td>
      <td scope="row"><%= food.price%></td>
      <td scope="row"><%= button_to 'Delete', food_path(id: food), method: :delete%></td>
     </tr>
    <% end %>
</table>
<%=link_to "Add Food", new_food_path, class: "btn btn-primary"%>
</div>




